    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch build cross-llvm",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "build",
                "cross-llvm",
                "--source-directory-path",
                "/tmp/source/llvm",
                "--output-directory-path",
                "/tmp/output/llvm"
            ],
        },
        {
            "name": "Launch package cross-llvm",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "package",
                "tarball",
                "-s",
                "/tmp/cbc764fd-d834-45ee-835b-3773842e33dd",
                "-c"
            ],
        },
        {
            "name": "Launch install cross-llvm",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "install",
                "tarball",
                "-s",
                "/tmp/build-3630261619.tar.gz",
                "-D",
                "/tmp/install-test"
            ],
        }
    ]
}