    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch build cross-llvm",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "build",
                "cross-llvm",
                "--source-directory-path",
                "/tmp/source/llvm",
                "--output-directory-path",
                "/tmp/output/llvm"
            ],
        },
        {
            "name": "Launch package cross-llvm",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "package",
                "tarball",
                "-c",
                "--build-output-path",
                "/tmp/output/llvm",
                "--output-file-path",
                "/tmp/package/llvm.tar.gz"
            ],
        },
        {
            "name": "Launch install cross-llvm",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "install",
                "tarball",
                "-s",
                "/tmp/package/llvm.tar.gz",
                "-D",
                "/tmp/install-test"
            ],
        }
    ]
}